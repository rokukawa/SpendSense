{{>dashboard}}

<style>
    .text-color {
        color: #cbb26b;
    }

    .bar-color {
        background-color: #002c6a;
    }

    .button-color {
        background-color: #cbb26b;
    }
</style>

<div class="col col-lg-5" style="margin: auto auto;">
    <div class="card text-white bar-color mb-3" style="max-width: 58rem;">
        <div class="row align-items-stretch justify-content-center no-gutters">
            <div class="col-md-7">
                <div class="form h-100 contact-wrap p-5">
                    <h3 class="text-center text-color">Vamos conversar</h3>
                    <form class="mb-5" action="/contato" method="post" id="contactForm" name="contactForm">
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label for="" class="col-form-label text-color">Nome *</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Nome">
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label for="" class="col-form-label text-color">E-mail *</label>
                                <input type="email" class="form-control" name="email" id="email"  placeholder="E-mail">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="budget" class="col-form-label text-color">Assunto</label>
                                <input type="text" class="form-control" name="subject" id="subject" placeholder="Assunto">
                            </div>
                        </div>

                        <div class="row mb-5">
                            <div class="col-md-12 form-group mb-3">
                                <label for="message" class="col-form-label text-color">Mensagem *</label>
                                <textarea class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Escreva sua mensagem"></textarea>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-5 form-group text-center">
                                <input type="submit" value="Enviar" class="btn btn-block button-color rounded-0 py-2 px-4">
                                <span class="submitting"></span>
                            </div>
                        </div>
                    </form>

                    <div id="form-message-warning mt-4">

                    </div> 
                    <div id="form-message-success">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>